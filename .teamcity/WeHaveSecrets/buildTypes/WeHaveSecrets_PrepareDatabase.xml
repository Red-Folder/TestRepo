<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="0aac2189-23c9-41a7-9518-e93f53c9c3df" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/2017.2/project-config.xsd">
  <name>02. Prepare Database</name>
  <description />
  <settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_1" name="Create empty database" type="simpleRunner">
        <parameters>
          <param name="script.content" value="docker-compose -f Setup/docker-compose.yml -p 'WeHaveSecrets' up -d --force-recreate db " />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="Run DB Setup" type="simpleRunner">
        <parameters>
          <param name="script.content" value="docker-compose -f Setup/docker-compose.yml -p 'WeHaveSecrets' up --force-recreate db-setup" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="WeHaveSecretsCode" />
    </vcs-settings>
    <requirements>
      <equals id="RQ_1" name="system.agent.name" value="compose" />
    </requirements>
    <build-triggers />
    <dependencies>
      <depend-on sourceBuildTypeId="WeHaveSecrets_Build">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

